{% extends "base.html.twig" %}
{% block stylesheets %}<link href="css/QuizGamePage.css" rel="stylesheet">{% endblock %}
{% block menu %}
{% endblock %}
{% block body %}
    <div class="container">
        {{ quiz.name }}
        <div class="row">
           <div class="cl-lg-12">
               <table class="table">
                   <thead>
                   <tr>
                       <th>№</th>
                       <th>name</th>
                       <th>кол-во правильно отвеченых</th>
                       <th>кол-во вопросов</th>
                       <th>время</th>
                   </tr>
                   </thead>
                   <tbody>
                       {% for  key,oneleader in leaders %}
                           {% if key>-1 and key<3 %}
                               <tr>
                                   <td>{{ key+1 }}</td>
                                   <td>{% if oneleader.user.id==user.id %}you{% else %}{{ oneleader.user.username }}{% endif %}</td>
                                   <td>{{ oneleader.correct }}</td>
                                   <td>{{ oneleader.answered }}</td>
                                   <td>время</td>
                               </tr>
                           {% elseif oneleader.user.id==user.id %}
                               <tr>
                                   <td>...</td>
                                   <td>...</td>
                                   <td>...</td>
                                   <td>...</td>
                                   <td>...</td>
                               </tr>
                               <tr>
                                   <td>{{ key+1 }}</td>
                                   <td>{% if oneleader.user.id==user.id %}you{% else %}{{ oneleader.user.username }}{% endif %}</td>
                                   <td>{{ oneleader.correct }}</td>
                                   <td>{{ oneleader.answered }}</td>
                                   <td>время</td>
                               </tr>

                           {% endif %}

                       {% endfor %}
                   </tbody>
               </table>
           </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}<script src="js/lol.js"></script>{% endblock %}




