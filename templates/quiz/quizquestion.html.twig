{% extends "base.html.twig" %}
{% block stylesheets %}<link href="css/QuizGamePage.css" rel="stylesheet">{% endblock %}
{% block menu %}
{% endblock %}
{% block body %}
    <div class="container">
        {{ quiz.name }}
        <br>
        <br>
        {{ question.text }}
        <br>
        <br>
        <div class="row">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_errors(form.answers) }}
                <div class="col-sm-12">
                    {{ form_label(form.answers ) }}
                    {{ form_widget(form.answers, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <br>
                    {{ form_widget(form.next, { 'label': 'next'})}}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}<script src="js/lol.js"></script>{% endblock %}




